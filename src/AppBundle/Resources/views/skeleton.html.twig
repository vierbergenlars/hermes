{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-9 pull-right">
                <div class="panel panel-
                {%- spaceless %}
                    {% set _route = app.request.attributes.get('_route') %}
                    {% if _route starts with 'admin_get_' or _route starts with 'get_' %}
                        info
                    {% elseif _route starts with 'admin_post_' or _route starts with 'post_'
                        or _route starts with 'admin_put_' or _route starts with 'put_'
                        or _route starts with 'admin_delete_' or _route starts with 'delete_' %}
                        warning
                    {% elseif _route starts with 'admin_remove_'  or _route starts with 'remove_' %}
                        danger
                    {% else %}
                        primary
                    {% endif %}
                {% endspaceless -%}
                ">
                    {% block content %}
                    {% endblock %}
                </div>
            </div>
            <div class="col-xs-12 col-sm-4 col-md-3">
                {% block sidebar %}
                {% endblock %}
            </div>
        </div>
    </div>
{% endblock %}
